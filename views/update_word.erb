<h1>Update <%= @word.word %></h1>

<form action="/words/<%= @word.id %>/edit" method="post">
  <input word="_method" type="hidden" value="patch">

  <label for="word">Edit word</label>
  <input name="word" type="text">

  <button type="submit">Update</button>
</form>

<p><a href="/">Return to word list</a></p>
